@model EventEase.Models.Venue

@{
    ViewData["Title"] = "Venue Details";
}

<h1>Venue Details</h1>

<div>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <dl class="row">
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.VenueName)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.VenueName)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Location)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Location)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Capacity)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Capacity)
                </dd>
            </dl>
        </div>
        <div class="col-md-6">
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="@Model.ImageUrl" class="img-fluid rounded" alt="@Model.VenueName">
            }
        </div>
    </div>
</div>
<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.VenueId" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>