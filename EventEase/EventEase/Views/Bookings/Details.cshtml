@model EventEase.Models.Booking

@{
    ViewData["Title"] = "Booking Details";
}

<h1>Booking Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BookingId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BookingId)
        </dd>
        <dt class="col-sm-2">
            Event
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Event.EventName)
        </dd>
        <dt class="col-sm-2">
            Venue
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Venue.VenueName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BookingDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BookingDate)
        </dd>
        <dt class="col-sm-2">
            Event Dates
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Event.StartDate) to @Html.DisplayFor(model => model.Event.EndDate)
        </dd>
        <dt class="col-sm-2">
            Venue Capacity
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Venue.Capacity)
        </dd>
    </dl>
</div>
<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>