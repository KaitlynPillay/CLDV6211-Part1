@model IEnumerable<EventEase.Models.Booking>

@{
    ViewData["Title"] = "Bookings";
}

<h1>Bookings</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Booking</a>
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Booking ID</th>
            <th>Event</th>
            <th>Venue</th>
            <th>Booking Date</th>
            <th>Event Dates</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.BookingId)</td>
                <td>@Html.DisplayFor(modelItem => item.Event.EventName)</td>
                <td>@Html.DisplayFor(modelItem => item.Venue.VenueName)</td>
                <td>@Html.DisplayFor(modelItem => item.BookingDate)</td>
                <td>
                    @Html.DisplayFor(modelItem => item.Event.StartDate) to
                    @Html.DisplayFor(modelItem => item.Event.EndDate)
                </td>
                <td>
                    <div class="btn-group" role="group">
                        <a asp-action="Details" asp-route-id="@item.BookingId" class="btn btn-sm btn-outline-secondary">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.BookingId" class="btn btn-sm btn-outline-danger">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>